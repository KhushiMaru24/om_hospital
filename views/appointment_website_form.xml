<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="menu_appointment_root" model="website.menu">
        <field name="name">Create Appointment</field>
        <field name="url">/appointment_webform</field>
        <field name="parent_id" search="[('parent_id', '=', False), ('website_id', '=', 1)]"/>
        <field name="sequence" type="int">20</field>
    </record>


    <template id="create_appointmentss" name="Create Appointment">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webappointment" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <br></br>
                            <br></br>

                            <div class="form-group">
                                <label for="patient_id" class="control-label">Name</label>
                                <input type="patient_id" name="patient_id" t-att-value="patient_id" id="patient_id" class="form-control" required="required"
                                       value="request.params.get('patient_id', '')"/>
                            </div>
                            <br></br>
<!--                            <div class="clearfix or_login_button">-->
<!--                                <button type="check" class="btn btn-primary pull-left">Submit</button>-->
<!--                            </div>-->

                            <div class="form-group">
                                <label for="appointment_date" class="control-label">Appointment Date</label>
                                <input type="date" name="appointment_date" t-att-value="appointment_date" id="appointment_date" class="form-control" required="required"/>
                            </div>
                            <br></br>
                            <div class="o_notification_area">
                                <t t-if="warning">
                                    <div class="o_warning">
                                        <span class="o_warning_title"><t t-esc="warning.get('title')"/></span>
                                        <p><t t-esc="warning.get('message')"/></p>
                                    </div>
                                </t>
                            </div>
<!--                            <script src="/om_hospital/static/src/js/ajax_controller.js"></script>-->

<!--                            <div class="form-group">-->
<!--                                <label for="appointment_time" class="control-label">Appointment Time</label>-->
<!--                                <input type="datetime-local" name="appointment_time" t-att-value="appointment_time" id="appointment_time" class="form-control"/>-->
<!--                            </div>-->

<!--                            <div class="form-group">-->
<!--                                <label for="ref" class="control-label">Reference</label>-->
<!--                                <input type="text" name="ref" t-att-value="ref" id="ref" class="form-control" required="required" value="{{patient_id.ref}}"/>-->
<!--                            </div>-->

<!--                            <div class="form-group">-->
<!--                                <label for="gender" class="control-label">Gender</label>-->
<!--                                <input type="text" name="gender" t-att-value="gender" id="gender" class="form-control" required="required" value="{{patient_id.gender}}"/>-->
<!--                            </div>-->
                            <br></br>
                            <div class="checkbox">
                                <label for="hide_sales_price" class="control-label">Hide Sales Price</label>
                                    <input type="checkbox" name="hide_sales_price" t-att-checked="hide_sales_price" class="form-check-input"/>
                            </div>
                            <br></br>
                            <div class="clearfix or_login_button">
                                <button type="submit" class="btn btn-primary pull-left">Submit</button>
                                <button id="showPopupButton" class="btn btn-primary">Show Popup</button>
<!--                                <button type="submit" class="btn btn-primary" onclick="cancelForm()">Cancel</button>-->
                            </div>
                            <br></br>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="appointment_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/appointment-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">om_hospital.appointment_thanks</field>
        <field name="arch" type="xml">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <h1>Thanks!!</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="alert alert-success" role="status">
                                    The Appointment has been Created successfully.
                                </div>
                                <p>
                                    Visit Hospital At Appointment Time.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </field>
    </record>

    <template id="create_patient_button" name="Create Patient Button">
         <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <div class="clearfix or_login_button">
                            <button name="create_patient_action" string="Create New Patient" type="action" class="btn-primary"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
