<?xml version="1.0" encoding="UTF-8" ?>
<templates id="dashboard_template" xml:space="preserve">
    <t t-name="om_hospital.create_dashboard_tag" owl="1">
         <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3 align-items-center justify-content-center" style="weight: 100%;">
                <div class="col-lg-12 text-center">
                    <div class="shadow-sm border m-2 p-4 bg-white">
                        <h1>Dashboard</h1>
                    </div>
                </div>
                <br></br>
                <br></br>

                <div class="col-lg-5 text-center">
                    <div class="card mb-3">
                        <div class="card-body" t-on-click="onPatientCardClick">
                            <h3 class="card-title">Patients</h3>
                            <p class="card-text" style="font-size: 24px;"><span t-esc="state.patientCount"/></p> <!-- Increased font size -->
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 text-center">
                    <div class="card mb-3">
                        <div class="card-body" t-on-click="onAppointmentCardClick">
                            <h3 class="card-title">Appointments</h3>
                            <p class="card-text" style="font-size: 24px;"> <span t-esc="state.appointmentCount"/></p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="col-lg-5 text-center shadow-sm border m-2 p-4 bg-white" >
                        <canvas t-ref="canvas"></canvas>
                    </div>
                </div>
                <div>
                    <div class="shadow-sm border m-2 p-4 bg-white" style="height: 400px">
                        <canvas t-ref="barCanvas"></canvas>
                    </div>
                </div>
                <br></br>
                <br></br>
                <br></br>
                <br></br>
            </div>
        </div>

    </t>
</templates>