            <field name="model">http.controller</field>
            <field name="type">http</field>
            <field name="arch" type="xml">
                <data>
                    <!-- Map the route to the controller method -->
                    <route string="/api/patients" name="hospital_api_patients" methods="GET">
                        <template>om_hospital.sale_order</template>
                        <controller>om_hospital.HospitalApiController.get_patients</controller>
                    </route>
                </data>
            </field>
        </record>

