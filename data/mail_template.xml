<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="patient_card_email_template" model="mail.template">
            <field name="name">Appointment Template</field>
            <field name="model_id" ref="om_hospital.model_hospital_appointment"/>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.patient_id.email }}</field>
            <field name="subject">Appointment Details</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                    <tr>
                        <td valign="top" style="padding: 0px 10px;">
                            <div style="margin: 0px; padding: 0px;">
                                <div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
                                    <h2>
                                        Hi, <t t-out="object.patient_id.name"/>
                                    </h2>
                                    <div>
                                        <h3>
                                            This is a demo email sent to you for checking the mail template.
                                        </h3>
                                        <p>
                                            Age: <t t-out="object.patient_id.age"/><br/>
                                            Contact Number: <t t-out="object.patient_id.phone"/>
                                            <!-- Adjust 'phone' to the actual field name for the contact number -->
                                        </p>
                                        <p>If you have any queries, feel free to ask.</p>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                Regards,<br/>
                                <t t-out="object.patient_id.name"/><br/>
                            </div>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>
