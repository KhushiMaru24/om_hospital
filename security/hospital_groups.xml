<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_hospital">
            <field name="name">Hospital</field>
            <field name="description">Category for hospital</field>
        </record>

        <record id="hospital_patient_rule_admin" model="ir.rule">
            <field name="name">Hospital Patient Administrator Rule</field>
            <field name="model_id" ref="model_hospital_patient"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="hospital_appointment_rule_admin" model="ir.rule">
            <field name="name">Hospital Appointment Administrator Rule</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="hospital_pharmacy_data_rule_admin" model="ir.rule">
            <field name="name">Hospital Pharmacy Data Administrator Rule</field>
            <field name="model_id" ref="model_pharmacy_data"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="hospital_pharmacy_line_rule_admin" model="ir.rule">
            <field name="name">Hospital Pharmacy Line Administrator Rule</field>
            <field name="model_id" ref="model_appointment_pharmacy_lines"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="hospital_dashboard_rule_admin" model="ir.rule">
            <field name="name">Hospital Dashboard Administrator Rule</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="group_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="category_id" ref="module_category_hospital"/>
        </record>

    </data>
</odoo>
