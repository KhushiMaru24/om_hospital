<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hospital_tree" model="ir.ui.view">
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="ref"/>
                <field name="gender"/>
                <field name="doctor_id"/>
                <field name="appointment_count" sum="Total Appointment"/>
<!--                <field name="tag_ids"/>-->
            </tree>
        </field>
    </record>

    <!-- views/templates.xml -->
    <template id="om_hospital_dynamic_snippet_template">
        <div class="om_hospital_dynamic_snippet">
            <div class="js_om_hospital_dynamic_snippet">
                <!-- Container for patients -->
                <div class="patients-container js_patients_container">
                    <!-- Rendered patients will be inserted here -->
                </div>

                <!-- Container for appointments -->
                <div class="appointments-container js_appointments_container">
                    <!-- Rendered appointments will be inserted here -->
                </div>
            </div>
        </div>
    </template>


