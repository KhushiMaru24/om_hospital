<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="login"/>
                <field name="password"/>
            </tree>
        </field>
     </record>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="login"/>
                            <field name="password"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pharmacy" name="pharmacy">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
     </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'sequence': 2, 'view_mode': 'tree', 'view_id': ref('om_hospital.doctor_tree')}),
                    (0, 0, {'sequence': 3, 'view_mode': 'form', 'view_id': ref('om_hospital.doctor_form')}),
                ]"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Doctor !
          </p>
        </field>
    </record>

    <menuitem id="hospital_doctor" name="Doctor" parent="hospital_root" sequence="20"/>
    <menuitem id="hospital_doctors" name="Doctors" parent="hospital_doctor" action="action_doctor" sequence="0"/>

</odoo>